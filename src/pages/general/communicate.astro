    <script is:inline>
        //获取本文件夹 Exception.json 文件
        //获得时间戳
        let timestamp = new Date().getTime();
        $.getJSON("exception.json?"+timestamp, function(data) {

            let ExceptionList = data;
            let ExceptionListLength = ExceptionList.length;
            let ExceptionListHTML = ``;

            if(data.status == "error"){
                ExceptionListHTML = `<p>（读取列表失败）</p>`;
            } else if (ExceptionListLength == 0) {
                ExceptionListHTML = `<p>（暂无异常情况）</p>`;
            } else {
                for (let i = 0; i < ExceptionListLength; i++) {
                    ExceptionListHTML += `
                    <tr>
                        <td>${ExceptionList[i].time}</td>
                        <td>${ExceptionList[i].way}</td>
                        <td>${ExceptionList[i].value}</td>
                        <td>${ExceptionList[i].note}</td>
                    </tr>
                    `;
                }	
                ExceptionListHTML = `
                <table class="table table-hover" style=" width: 800px">
                    <thead>
                        <tr>
